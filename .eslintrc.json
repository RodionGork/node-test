{
    "env": {
        "es6": true,
        "node": true
    },
    "globals": {
        "describe": true,
        "it": true
    },
    "extends": "eslint:recommended",
    "rules": {
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-console": [
            "error",
            { "allow": ["warn", "error"] }
        ],
        "block-scoped-var": [
            "error"
        ],
        "complexity": [
            "error",
            5
        ],
        "consistent-return": [
            "error"
        ],
        "curly": [
            "error"
        ],
        "eqeqeq": [
            "error",
            "smart"
        ],
        "yoda": [
            "error"
        ]
    }
}
